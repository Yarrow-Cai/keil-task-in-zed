// File: .zed/tasks.json
//
// 此任务配置会自动调用辅助脚本来查找项目文件。
//
// 如何使用:
// 1. 打开 `.zed/keil_task.bat` 文件。
// 2. 在文件顶部, 将 `KEIL_PATH` 变量设置为你电脑上 Keil 的实际安装路径。
// 3. 完成! 现在你可以将这个 `.zed` 文件夹复制到任何项目, 它会自动工作。
//
[
  {
    "label": "Keil: 编译 (自动查找)",
    "command": "cmd.exe",
    "args": ["/c", ".zed\\keil\\keil_task.bat", "build"],
    "reveal": "always"
  },
  {
    "label": "Keil: 重新编译 (自动查找)",
    "command": "cmd.exe",
    "args": ["/c", ".zed\\keil\\keil_task.bat", "rebuild"],
    "reveal": "always"
  },
  {
    "label": "Keil: 烧录 (自动查找)",
    "command": "cmd.exe",
    "args": ["/c", ".zed\\keil\\keil_task.bat", "flash"],
    "reveal": "always"
  },
  {
    "label": "Keil: 清理 (Clean)",
    "command": "cmd.exe",
    "args": ["/c", ".zed\\keil\\keilkilll.bat"],
    "reveal": "always"
  },
  {
    "label": "Keil: clangd 配置与 compile_commands 生成",
    "command": "cmd.exe",
    "args": ["/c", ".zed\\keil\\clangd_config.bat"],
    "reveal": "always"
  },
  {
    "label": "Keil: 生成 .gitignore 文件",
    "command": "cmd.exe",
    "args": ["/c", ".zed\\keil\\gitignore_config.bat"],
    "reveal": "always"
  },
  {
    "label": "Keil: 转换所有 C/H 文件为 UTF-8",
    "command": "cmd.exe",
    "args": ["/c", ".zed\\keil\\keil_utf8conv.bat"],
    "reveal": "always"
  },
  {
    "label": "terminal",
    "command": "cmd.exe",
    "args": [],
    "reveal": "always"
  }
]
